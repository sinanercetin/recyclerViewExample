<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailFragment">

    <ImageView
        android:id="@+id/imageVitamin"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/nameVitamin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageVitamin"
        android:text="Test"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginVertical="10dp"
        />
    <TextView
        android:id="@+id/altBaslikVitamin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameVitamin"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginVertical="5dp"
        />

    <ListView
            android:id="@+id/listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_below="@id/altBaslikVitamin"
        />

    <TextView
        android:id="@+id/vitaminBilgi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listview"
        android:text="@string/vitamin_bilgi"
        android:textSize="12sp"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginVertical="10dp"
        />



</RelativeLayout>